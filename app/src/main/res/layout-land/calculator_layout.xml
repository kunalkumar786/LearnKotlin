<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/bt_1"
        app:layout_constraintTop_toBottomOf="@+id/bt_1" />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="2"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bt_1"
        app:layout_constraintTop_toBottomOf="@+id/bt_5" />

    <Button
        android:id="@+id/bt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:minWidth="48dp"
        android:text="3"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_2"
        app:layout_constraintStart_toEndOf="@+id/bt_2" />

    <Button
        android:id="@+id/bt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="4"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/bt_7"
        app:layout_constraintTop_toBottomOf="@+id/bt_7" />

    <Button
        android:id="@+id/bt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:minWidth="48dp"
        android:text="5"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_4"
        app:layout_constraintStart_toEndOf="@+id/bt_4" />

    <Button
        android:id="@+id/bt_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="6"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bt_5"
        app:layout_constraintTop_toBottomOf="@+id/bt_9" />

    <Button
        android:id="@+id/bt_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minWidth="48dp"
        android:text="7"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/new_number"
        app:layout_constraintTop_toBottomOf="@+id/new_number" />

    <Button
        android:id="@+id/bt_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:minWidth="48dp"
        android:text="8"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_7"
        app:layout_constraintStart_toEndOf="@+id/bt_7" />

    <Button
        android:id="@+id/bt_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:minWidth="48dp"
        android:text="9"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_8"
        app:layout_constraintStart_toEndOf="@+id/bt_8" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/bt_4"
        app:layout_constraintTop_toBottomOf="@+id/bt_4" />

    <Button
        android:id="@+id/bt_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:minWidth="48dp"
        android:text="/"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_9"
        app:layout_constraintStart_toEndOf="@+id/bt_9" />

    <Button
        android:id="@+id/bt_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:minWidth="48dp"
        android:text="*"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_6"
        app:layout_constraintStart_toEndOf="@+id/bt_6" />

    <Button
        android:id="@+id/bt_substract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:minWidth="48dp"
        android:layout_marginLeft="12dp"
        android:width="48dp"

        android:text="-"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_3"
        app:layout_constraintStart_toEndOf="@+id/bt_3" />

    <Button
        android:id="@+id/bt_decimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:minWidth="48dp"
        android:text="."
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bt_0"
        app:layout_constraintTop_toBottomOf="@+id/bt_2" />

    <Button
        android:id="@+id/bt_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:minWidth="48dp"
        android:layout_marginLeft="12dp"
        android:text="="
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_decimal"
        app:layout_constraintStart_toEndOf="@+id/bt_decimal" />

    <Button
        android:id="@+id/bt_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="+"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_equal"
        app:layout_constraintStart_toEndOf="@+id/bt_equal" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"

        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/new_number"
        app:layout_constraintEnd_toStartOf="@+id/new_number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/new_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginLeft="138dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintEnd_toStartOf="@+id/result"
        app:layout_constraintStart_toEndOf="@+id/operation"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>